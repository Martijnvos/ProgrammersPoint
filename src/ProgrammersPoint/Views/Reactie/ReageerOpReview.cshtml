@{
    ViewData["Title"] = "Reactie opstellen";
}
@using ProgrammersPoint.ViewModels.Reactie
@model ReageerOpReviewViewModel

<div class="container">
    <h1>Reactie opstellen</h1>

    <form asp-controller="Reactie" asp-action="ReageerOpReview" asp-antiforgery="true">
        <div class="form-group">
            <label asp-for="Reactie.Inhoud" for="inhoud">Inhoud reactie</label>
            <textarea asp-for="Reactie.Inhoud" rows="5" class="form-control" id="inhoud"></textarea>
        </div>

        <input asp-for="PostId" type="hidden" />
        <input asp-for="Reactie.ReviewId" type="hidden" />

        <button class="btn btn-primary" type="submit">Reageer</button>
    </form>
</div>