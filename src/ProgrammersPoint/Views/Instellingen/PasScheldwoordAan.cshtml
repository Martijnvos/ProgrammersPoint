@{
    ViewData["Title"] = "Scheldwoord aanpassen";
}
@using System
@model Scheldwoord

<div class="container">
    <h1>Scheldwoord aanpassen</h1> <br />

    <form asp-controller="Instellingen" asp-action="SlaAangepastScheldwoordOp" asp-antiforgery="true">
        <div class="form-group">
            <label asp-for="Woord" for="scheldwoord">Woord</label>
            <input class="form-control" asp-for="Woord" type="text" id="scheldwoord"/>
        </div>
        <input asp-for="ScheldwoordId" type="hidden">

        <button class="btn btn-primary" type="submit">Scheldwoord aanpassen</button>
    </form>
</div>