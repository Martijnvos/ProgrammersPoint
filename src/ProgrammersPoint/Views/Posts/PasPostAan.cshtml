@using System
@using ProgrammersPoint.ViewModels.Posts

@{
    ViewData["Title"] = "Post aanpassen";
}

@model PostsViewModel

<div class="container">
    <h1>Post aanpassen</h1>

    <form asp-controller="Posts" asp-action="PasPostAan" asp-antiforgery="true">
        <div class="form-group">
            <label asp-for="PasPostAanVM.Categorie" for="categorie">Categorie</label>
            <select asp-for="PasPostAanVM.Categorie" class="form-control" id="categorie">
                @foreach (Categorieën taal in Enum.GetValues(typeof(Categorieën)))
                {
                    <option value="@taal.ToString()">@taal.ToString()</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="PasPostAanVM.Naam" for="postnaam">Naam</label>
            <input asp-for="PasPostAanVM.Naam" type="text" class="form-control" id="postnaam" />
        </div>
        <div class="form-group">
            <label asp-for="PasPostAanVM.BeschrijvingTaal" for="postbeschrijving">Beschrijving</label>
            <textarea asp-for="PasPostAanVM.BeschrijvingTaal" rows="5" class="form-control" id="postbeschrijving"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="PasPostAanVM.MoeilijkheidsgraadOnderwerp">Moeilijkheidsgraad</label>
            <div>
                @for (var i = 1; i < 6; i++)
                {
                    <label class="radio-inline" for="moeilijkheidsgraad-@i">
                        <input asp-for="PasPostAanVM.MoeilijkheidsgraadOnderwerp" value="@i" type="radio" id="moeilijkheidsgraad-@i">@i
                    </label>
                }
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PasPostAanVM.PostVersie" for="postversie">Postversie</label>
            <input asp-for="PasPostAanVM.PostVersie" type="number" class="form-control" id="postversie" />
        </div>
        <div class="form-group">
            <label asp-for="PasPostAanVM.TaalVersie" for="taalversie">Taalversie</label>
            <input asp-for="PasPostAanVM.TaalVersie" type="text" class="form-control" id="taalversie" />
        </div>
        <input asp-for="PostId" type="hidden">

        <button class="btn btn-primary" type="submit">Post aanpassen</button>
    </form>
</div>